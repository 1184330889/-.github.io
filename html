    <script>
        function analyze() {
            // 获取表单数据
            const name = document.getElementById('name').value;
            const birthDate = document.getElementById('birth_date').value;
            const targetDate = document.getElementById('target_date').value;
            const question = document.getElementById('question').value;
            const useLunar = document.getElementById('use_lunar').checked;
            
            // 这里应该调用您的Python程序
            // 由于浏览器无法直接运行Python，我们需要使用后端API
            
            // 模拟结果（实际应用中应该从服务器获取）
            const mockResult = {
                name: name,
                lunar: {
                    year_gan: "甲",
                    year_zhi: "子"
                },
                datetime: targetDate + " 12:00:00",
                main: {
                    name: "乾为天",
                    code: "111111",
                    judgement: "元亨利贞：象征刚健自强、积极向上。",
                    moving_yao_text: "初九：潜龙勿用——藏锋蓄势，暂不露头。"
                },
                changed: {
                    name: "坤为地",
                    code: "000000",
                    judgement: "厚德载物：包容与承载，适合稳固基础。"
                }
            };
            
            // 显示结果
            const resultDiv = document.getElementById('result');
            resultDiv.style.display = 'block';
            resultDiv.innerHTML = `
                <h2>分析结果</h2>
                <p><strong>姓名：</strong>${mockResult.name}</p>
                <p><strong>生辰五行：</strong>${mockResult.lunar.year_gan}${mockResult.lunar.year_zhi}</p>
                <p><strong>查询日期：</strong>${mockResult.datetime}</p>
                <p><strong>主卦：</strong>${mockResult.main.name}（${mockResult.main.code}）</p>
                <p><strong>变卦：</strong>${mockResult.changed.name}（${mockResult.changed.code}）</p>
                <h3>综合建议：</h3>
                <p><strong>主卦解读：</strong>${mockResult.main.judgement}</p>
                <p><strong>变爻解读：</strong>${mockResult.main.moving_yao_text}</p>
                <p><strong>变卦解读：</strong>${mockResult.changed.judgement}</p>
            `;
        }
    </script>
